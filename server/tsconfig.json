{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "noEmitOnError": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "prisma", "scripts"]
}

